#!/bin/bash
sync
scrot /tmp/lockscreen.png
convert /tmp/lockscreen.png -scale 10% -scale 1000% /tmp/lockscreen.png
[[ -f $HOME/.config/pics/lock-icon.png ]] && convert /tmp/lockscreen.png $HOME/.config/pics/lock-icon.png -gravity center -composite -matte /tmp/lockscreen.png
i3lock -udi /tmp/lockscreen.png
