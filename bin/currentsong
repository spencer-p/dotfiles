#!/usr/bin/sh

SONGNAME=`spotinterface get Metadata 2> /dev/null | awk '
{
    if ( $0 ~ /[ ]*string "xesam:title"/ ) {
        getline line; 
        sub(/[ ]*variant[ ]*string "/, "", line); sub(/"$/, "", line); 
        print line;
    }
}'`

if [ `spotinterface get PlaybackStatus | grep Playing -c` == '1' ]
then
    STATUS=""
else
    STATUS=""
fi

if [ -z "$SONGNAME" ]; then
    songname="none"
fi

echo %{F-}$STATUS %{F\#ff7fa6b9}$SONGNAME 
