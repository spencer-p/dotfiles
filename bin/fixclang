#!/bin/bash

cd /bin

#Only do this deal if the files in question exist
if [ -f cc -a -f clang ]
then
    rm cc
    if [ $? != 0 ]
    then
        echo ERROR
        exit
    fi
    ln clang cc
    if [ $? != 0 ]
    then
        echo ERROR
        echo also i destroyed /bin/cc so you should fix that
        exit
    fi
fi
echo cc should now be clang
