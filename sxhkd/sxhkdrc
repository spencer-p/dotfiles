#
# bspwm hotkeys
#

super + alt + Escape
    killall panel bar conky panel_parse xtitle; \
    bspc quit


super + w
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {Tab,grave}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + p
    bspc window -t pseudo_tiled

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,alt + }space
    bspc window last.{floating,tiled} -f

#super + {_,shift + }c
#    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

button{9,8}
    bspc desktop -f {next,prev}

super + ~button{9,8}
    #holding super makes the buttons 9 and 8 behave like normal

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

#super + ctrl + {_,shift + }space
#    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -10, down +10, up -10, right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -10, up +10, down -10, left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

super + Return
    urxvtc

#super + d
#    dmenu_run -i -w 800 -dim 0.4 -o 0.9 -y 300 -x 560 -q -l 10 -p '>' -nb '#232323' -nf '#ffffff' -sb '#232323' -sf '#5fafd7' -fn 'Arial:pixelsize=32'
    #dmenu_run -i -p 'Run:' -nb '#151515' -nf '#b0b0b0' -sb '#888888' -sf '#000000' -fn '-*-terminus-medium-r-normal-*-14-*-*-*-c-*-*-1'

super + d
    spotlight #my own custom command

super + c
    google-chrome-stable

#alt + l
#    sleep 0.5 && xset dpms force off    
#lock

super + shift + s
    screenshot

super + shift + alt + s
    screenshot -s 

super + shift + u
    feh ~/.config/pics/accents.png

XF86AudioRaiseVolume
    vol +

XF86AudioLowerVolume
    vol -

XF86AudioMute
    togglemute 

XF86AudioPrev
    spotinterface Previous

XF86AudioNext
    spotinterface Next

XF86AudioPlay
    spotinterface PlayPause

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
