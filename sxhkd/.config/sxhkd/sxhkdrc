#
# bspwm hotkeys
#

super + alt +{_,shift+} Escape
    killall panel bar conky panel_parse xtitle; \
    bspc quit


super + w
    bspc window -c

super + t
    bspc desktop -l next

super + b
    bspc desktop -B

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {Tab,grave}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer}.local -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + p
    bspc window -t pseudo_tiled

super + {_,shift + } {h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + space
    [[ "$(bspc query -T -w focused | grep "f------- \*")" ]] && bspc window last.tiled.local -f || bspc window last.floating.local -f

#super + {_,shift + }c
#    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + shift + {comma,period}
    bspc desktop -F {horizontal,vertical}

super + bracket{left,right}
    bspc desktop -f {prev,next}

button{9,8}
    bspc desktop -f {next,prev}

super + ~button{9,8}
    #holding super makes the buttons 9 and 8 behave like normal

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

#super + ctrl + {_,shift + }space
#    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -50, down +50, up -50, right +50}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -50, up +50, down -50, left +50}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

super + {minus,equal}
    bspc desktop -R {-,_}90

super + e
    bspc desktop -E

#
# wm independent hotkeys


super + Return
    urxvtc

super + shift + Return
    bspc rule -a \* -o floating=on;\
    newtermgeom="echo $(slop -b 2 -f "\$(expr %w / 6)x\$(expr %h / 12)+%x+%y")";\
    urxvt -g $(eval $newtermgeom)

